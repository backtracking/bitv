# where to install
LIBDIR = @LIBDIR@
OCAMLFIND=@OCAMLFIND@

CMO = bitv.cmo bitv_string.cmo
CMI = $(CMO:.cmo=.cmi)
MLI = $(CMO:.cmo=.mli)
CMX = $(CMO:.cmo=.cmx)
OBJS = $(CMO:.cmo=.o)

BYTEFILES = $(CMO) $(CMI) $(MLI)
OPTFILES = $(CMX) $(OBJS)

all: @OCAMLBEST@ test

byte: $(CMO)

opt: $(CMO) $(CMX)

test: bitv.cmo
	ocaml test.ml

sieve.opt: bitv.cmx bitv_string.cmx sieve.cmx
	@OCAMLOPT@ -o $@ $^

install: install-@OCAMLBEST@

ifeq "@USEOCAMLFIND@" "no"

install-byte:
	mkdir -p $(DESTDIR)$(LIBDIR)
	cp -f $(BYTEFILES) $(DESTDIR)$(LIBDIR)

install-opt:
	mkdir -p $(DESTDIR)$(LIBDIR)
	cp -f $(BYTEFILES) $(DESTDIR)$(LIBDIR)
	cp -f $(OPTFILES) $(DESTDIR)$(LIBDIR)

else

DESTDIR=-destdir $(LIBDIR:/bitv=)

install-byte:
	$(OCAMLFIND) remove $(DESTDIR) bitv
	$(OCAMLFIND) install $(DESTDIR) bitv META $(BYTEFILES)

install-opt:
	$(OCAMLFIND) remove $(DESTDIR) bitv
	$(OCAMLFIND) install $(DESTDIR) bitv META $(BYTEFILES) $(OPTFILES)

endif

# l.p.
######

doc: bitv.pdf

bitv.tex: bitv.mli
	@OCAMLWEB@ -s --no-index bitv.mli -o $@

bitv.pdf: bitv.tex
	pdflatex bitv && pdflatex bitv

# export
########

VERSION=@PACKAGE_VERSION@
NAME=bitv-$(VERSION)

SOURCES = bitv.mli bitv.ml test.ml META.in opam.in Makefile.in configure configure.in \
	  .depend README COPYING LICENSE CHANGES

FTP=/users/demons/filliatr/WWW/ftp/ocaml/ds

export:: bitv.pdf $(SOURCES)
	mkdir -p export/$(NAME)
	cp $(SOURCES) export/$(NAME)
	(cd export; tar cf $(NAME).tar $(NAME); \
	gzip -f --best $(NAME).tar)
	cp -f bitv.ml bitv.mli export/$(NAME).tar.gz $(FTP)
	cp -f bitv.pdf $(FTP)
	caml2html -d $(FTP) bitv.ml bitv.mli

# generic rules :
#################

CAMLC = @OCAMLC@
CAMLCOPT = @OCAMLOPT@
FLAGS=

.SUFFIXES: .mli .ml .cmi .cmo .cmx

.mli.cmi:
	$(CAMLC) -c $(FLAGS) $<

.ml.cmo:
	$(CAMLC) -c $(FLAGS) $<

.ml.o:
	$(CAMLCOPT) -c $(FLAGS) $<

.ml.cmx:
	$(CAMLCOPT) -c $(FLAGS) $<

# myself

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

configure: configure.in
	autoconf

# clean and depend
##################

clean:
	rm -f *~ *.cm[iox] *.o
	rm -f bitv.tex *.aux *.log *.dvi *.pdf

depend:
	rm -f .depend
	@OCAMLDEP@ *.mli *.ml > .depend

include .depend

